{
  "compilerOptions": {
    "lib": ["es5", "es6", "DOM"],
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "dist",
    "declaration": true,
    "noImplicitReturns": true,
    "esModuleInterop": true,
    "sourceMap": false
  },
  "exclude": ["node_modules", "src/tests/*"],
  "compileOnSave": true,
  "include": ["src"]
}
